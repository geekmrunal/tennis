<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tc3"
    android:minHeight="179dp"
    tools:context="com.android.kmrunal.table.MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">

            <TextView
                android:id="@+id/match_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="TeamA  vs  TeamB"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Players"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="1"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="3"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Team A"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamA_Set1_Game"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamA_Set2_Game"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamA_Set3_Game"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Team B"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamB_Set1_Game"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamB_Set2_Game"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamB_Set3_Game"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:text="" />

            <TextView
                android:id="@+id/points_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="Love All"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:text="                     " />

            <TextView
                android:id="@+id/teamA_points_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="0"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="42dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamB_points_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="0"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="42dp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/lable2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Play Game "
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/teamA_get_point"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tennis_racket"
        android:onClick="getTeamA_point"
        android:text="Player1"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lable2" />

    <Button
        android:id="@+id/teamB_get_point"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tennis_racket"
        android:onClick="getTeamB_point"
        app:layout_constraintLeft_toRightOf="@id/teamA_get_point"
        app:layout_constraintTop_toBottomOf="@+id/lable2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="136dp"
        android:background="#00FF00"
        android:onClick="reset_match"
        android:text="RESET"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
